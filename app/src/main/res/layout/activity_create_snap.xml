<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateSnapActivity">
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/buttonstyle"
            android:id="@+id/createSnapImageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="Choose Image"
            android:layout_width="124dp"
            android:layout_height="37dp"
            android:id="@+id/chooseImageButton" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonstyle"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/createSnapImageView"
            android:onClick="chooseimageClicked"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/messageEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Type Your Message Here"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/chooseImageButton"
            android:textAlignment="center"/>
    <Button
            android:text="next"
            android:layout_width="81dp"
            android:layout_height="37dp"
            android:background="@drawable/buttonstyle"
            android:id="@+id/nextButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="43dp" app:layout_constraintTop_toBottomOf="@+id/messageEditText"
            android:onClick="nextClicked"/>
</androidx.constraintlayout.widget.ConstraintLayout>