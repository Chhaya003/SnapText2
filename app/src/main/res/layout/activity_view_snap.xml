<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewSnapActivity">
    <ImageView
            android:layout_width="300dp"
            android:layout_height="400dp" app:srcCompat="@drawable/buttonstyle"
            android:id="@+id/snapImageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toTopOf="@+id/messageTextView"/>
    <TextView
            android:text="Snap Message"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/messageTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/snapImageView"
            android:background="@drawable/buttonstyle"
            android:layout_marginBottom="187dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" android:textSize="20sp" android:padding="10sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>